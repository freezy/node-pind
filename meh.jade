!!! 5
html
	head
		title Pind - A Pinball Daemon
		meta(name="viewport", content="width=device-width, initial-scale = 1.0, user-scalable = no")
		meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
		link(href="http://fonts.googleapis.com/css?family=Libre+Baskerville:400,700,400italic|Open+Sans:800,600,400", rel="stylesheet", type="text/css")
		link(href="css/bootstrap.min.css", rel="stylesheet", type="text/css", media="screen")
		link(href="css/bootstrap-responsive.min.css", rel="stylesheet", type="text/css", media="screen")
		link(href="css/pind.css", rel="stylesheet", type="text/css", media="screen")
		<!-- <link rel="stylesheet" href="css/style.min.css" type="text/css" media="screen"> -->
		<!--[if IE]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
	
	body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					ul.nav.pull-right
						li(data-slide="1").active
							a(href="#") Home
						li(data-slide="2")
							a(href="#") Design
						li(data-slide="3")
							a(href="#") Features
						li(data-slide="4")
							a(href="#") Technologies
						li(data-slide="5")
							a(href="#") About

		hr
		section#slide-header.slide(data-slide="1")
			.row
				.header-logo(data-stellar-background-ratio="0.5")
					.header-glow
						img(src="img/header-logo.png")
		hr
		section#slide-dictionary.light
			.container
				.row
					.span5.offset1
						.header-dictionary
							h1 <strong>dae&bull;mon</strong> [dee-muhn]
							h2 noun
							p A program that is not invoked explicitly, but lies dormant waiting for some condition(s) to occur.

					.span5
						.header-dictionary
							h1 <strong>condition to occur</strong>
							h2 &nbsp;
							p A high score, a new table release, missing artwork or ROM file or just a user browsing tables.

		hr
		section#slide-design.light.slide(data-slide="2")
			.container
				.row-fluid
					.span10.offset1
						h1 
							span Design
						.header-line

						ul.thumbnails
							li.span6
								img(src="img/design_login.png")
								p Simple design based on Twitter Bootstrap.
							li.span6
								img(src="img/design_vector.png")
								p Vector icons make sure everything is looking crispy at any resolution or zoom setting.
							li.span6
								img(src="img/design_buttons.png")
								p CSS for realistic DMD and buttons.
		
		hr
		section#slide-features.dark.slide(data-slide="3")
			.container
				.row-fluid
					.span10.offset1
						h1 
							span Features
						.header-line

						ul.thumbnails
							li.span12
								img(src="img/features_admin_sources.png")
								p Real-time fuzzy search on VPFâ€™s cabinet downloads. See results popping up while typing.
						ul.thumbnails
							li.span6
								img(src="img/features_admin_download.png")
								p Queue downloads and let pind automatically search for ROMs, media packs and table videos.
							li.span6
								img(src="img/features_admin_transfers.png")
								p Manage and monitor downloads in real-time. Everything stays in sync in all your browser windows.
							li.span6
								img(src="img/features_hiscores.png")
								p List high scores of all tables on one single page.



	script(type="text/javascript", src="js/jquery-2.0.2.min.js")
	script(type="text/javascript", src="js/jquery.stellar-0.6.2.min.js")
	script(type="text/javascript", src="js/jquery.waypoints-2.0.2.min.js")
	script(type="text/javascript", src="js/jquery.easing-1.3.min.js")
	script(type="text/javascript", src="js/pind.js")