extends ../layouts/inner

block vars
	- var pageController = 'CoinCtrl'
	- var mainMenu = "coin"

block content
	div.span10.offset1.content
		section
			.page-header
				h1 Drop A Coin

			.inner.middle
				p
					| Drop a coin into the running game. Make sure a game is running,
					| if you drop coins into HyperPin, you're losing credits for
					| nothing.
				br

		.dmd.middle
			span {{ credits }}

		section.coindrop
			.row
				.offset2.span3
					#coinleft.fuzzy3d
						button(ng-click="insertCoin(1)") Drop -.20
					.clearfix
					p Gives you <b>one</b> credit.
					.clearfix
				.offset2.span3
					#coinright.fuzzy3d
						button(ng-click="insertCoin(2)") Drop -.50
					.clearfix
					p Gives you <b>three</b> credits.
					.clearfix
					br
					br


			section.alerts

block inlineScripts
	script
		$(document).ready(function() {
			// updateCredits();
		});
