/**
 * defines selected text.
 * ex.: selection(red, white)
 */
selection(fg, bg)
	::-moz-selection
		color fg
		background bg
		text-shadow none
	::selection
		color fg
		background bg
		text-shadow none

border-radius-topleft(s)
	-moz-border-radius-topleft s
	-webkit-border-top-left-radius s
	border-top-left-radius s

border-radius-topright(s)
	-moz-border-radius-topright s
	-webkit-border-top-right-radius s
	border-top-right-radius s

border-radius-bottomleft(s)
	-moz-border-radius-bottomleft s
	-webkit-border-bottom-left-radius s
	border-bottom-left-radius s

border-radius-bottomright(s)
	-moz-border-radius-bottomright s
	-webkit-border-bottom-right-radius s
	border-bottom-right-radius s

