@import 'nib'

foreground = rgba(0,0,0,0.7)
foreground-light = rgba(255,255,255,0.6)
color-btn-light  = #e09d55

font-serif = "Libre Baskerville", "Garamond", "Times", "Times New Roman", serif
font-sans = "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif

body
	padding-top 40px
	color foreground
	font-family font-sans
	padding 0
p
	font-size 17px

hr
	border 3px solid color-btn-light
	margin 0
	&.first
		margin-top 40px

.light
	p, h1, h2
		text-shadow 0 1px rgba(255,255,255, 0.75)
	img
		border 1px solid foreground
	::-moz-selection
		background #ccc
		text-shadow none
	::selection
		background #ccc
		text-shadow none

div.arrow-h
	position absolute
	left 50%
	margin-top -166px
div.arrow-v
	display none
	position absolute
	left 50%
	margin-top -71px

.dark
	p, h1, h2
		color foreground-light
		text-shadow 0 1px rgba(0,0,0, 0.75)
	img
		border 1px solid foreground-light
		&.arrow-h
			border none
			position relative
			left -50%
		&.arrow-v
			border none
			position relative
			left -50%

	::-moz-selection
		background #444
		text-shadow none
	::selection
		background #444
		text-shadow none

.navbar
	.navbar-inner
		background rgba(255,255,255,0.95)
	.nav li a
		margin-bottom -6px
	.nav > .active a
		box-shadow none
		background-color rgba(0,0,0,0.1)
		border-bottom 4px solid color-btn-light

.header-logo
	t = 0.2
	height 500px
	background-image url("../img/dark_wood.png")
	background-position center

	& > .header-glow
		height 100%
		width 100%
		background url("data:image/svg+xml;base64,")
		background -moz-radial-gradient(center, ellipse cover,  rgba(255,255,255,t) 0%, rgba(255,255,255,t) 2%, rgba(255,255,255,t) 25%, rgba(0,0,0,0) 100%)
		background -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(255,255,255,t)), color-stop(2%,rgba(255,255,255,t)), color-stop(25%,rgba(255,255,255,t)), color-stop(100%,rgba(0,0,0,0)))
		background -webkit-radial-gradient(center, ellipse cover,  rgba(255,255,255,t) 0%,rgba(255,255,255,t) 2%,rgba(255,255,255,t) 25%,rgba(0,0,0,0) 100%)
		background -o-radial-gradient(center, ellipse cover,  rgba(255,255,255,t) 0%,rgba(255,255,255,t) 2%,rgba(255,255,255,t) 25%,rgba(0,0,0,0) 100%)
		background -ms-radial-gradient(center, ellipse cover,  rgba(255,255,255,t) 0%,rgba(255,255,255,t) 2%,rgba(255,255,255,t) 25%,rgba(0,0,0,0) 100%)
		background radial-gradient(ellipse at center,  rgba(255,255,255,t) 0%,rgba(255,255,255,t) 2%,rgba(255,255,255,t) 25%,rgba(0,0,0,0) 100%)

		& > img
			top 100px
			position relative
			display block
			margin auto

.header-dictionary
	padding 50px 0
	h1, h2, p
		margin 0
		font-family font-serif
		font-weight normal
		text-transform none
		text-align left
		strong
			font-weight bold
	h1
		font-size 32px

	h2
		font-size 26px
		font-style italic
	p
		font-size 18px
		line-height 32px
		font-style italic

h1
	margin-top 50px
	margin-bottom 20px
	font-family font-sans
	font-weight 800
	text-transform uppercase
	text-align center
	& > span
		padding 0 15px

.header-line
	border-top 1px solid foreground
	margin-bottom 48px
	margin-top -37px
	width 100%
.dark
	.header-line
		border-top 1px solid foreground-light

#slide-dictionary
	background-image url("../img/pw_maze_white.png")

#slide-design
	background-image url("../img/debut_light.png")
	h1 > span
		background-image url("../img/debut_light.png")

#slide-features
	background-image url("../img/grey_wash_wall.png")
	h1 > span
		background-image url("../img/grey_wash_wall.png")


ul.thumbnails img + p
	margin-top 15px

ul.bubbles
	li .bubble
		height 200px
		width 200px
		margin 0 auto 20px
		background-image url("../img/debut_light.png")
		border-radius 100px
		text-align center
		& > i.icon
			display block
			text-align center
			cursor default

			&.vpf
				padding-top 45px
				font-size 100px
			&.ipdb
				padding-top 64px
				font-size 70px
		& > span.dmd
			font-family ozoneregular
			font-size 50px
			text-transform uppercase
			line-height 28px
			position relative
			top 50px
			left 2px
			cursor default

	p
		text-align center



// bootstrap hacks
.row-fluid ul.thumbnails li.span12 + li { margin-left: 0px; clear: left }
.row-fluid ul.thumbnails li.span6:nth-child(2n + 3) { margin-left: 0px; clear: left }
.row-fluid ul.thumbnails li.span4:nth-child(3n + 4) { margin-left: 0px; clear: left }
.row-fluid ul.thumbnails li.span3:nth-child(4n + 5) { margin-left: 0px; clear: left }
.row-fluid ul.thumbnails li.span2:nth-child(6n + 7) { margin-left: 0px; clear: left }
.row-fluid ul.thumbnails li.span1:nth-child(12n + 13) { margin-left: 0px; clear: left }


@font-face {
	font-family: 'ozoneregular';
	src:url('../fonts/ozone-webfont.eot');
	src:url('../fonts/ozone-webfont.eot?#iefix') format('embedded-opentype'),
		url('../fonts/ozone-webfont.woff') format('woff'),
		url('../fonts/ozone-webfont.ttf') format('truetype'),
		url('../fonts/ozone-webfont.svg#ozoneregular') format('svg');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'pind-symbols';
	src:url('../fonts/pind-symbols.eot?72455');
	src:url('../fonts/pind-symbols.eot?72455') format('embedded-opentype'),
		url('../fonts/pind-symbols.woff?72455') format('woff'),
		url('../fonts/pind-symbols.ttf?72455') format('truetype'),
		url('../fonts/pind-symbols.svg?72455#pind-symbols') format('svg');
	font-weight: normal;
	font-style: normal;
}

.icon

	font-family 'pind-symbols'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased

	&.ipdb:before
		content "\e00c"

	&.vpf:before
		content: "\e00d"

@media (max-width: 480px)
	.header-logo
		height 300px
		.header-glow
			img
				top 80px
				width 70%
	div.arrow-v
		display inline

@media (max-width: 767px)
	section .container
		padding 0 40px
	.navbar
		margin-bottom -6px
		.navbar-inner
			padding 0 40px
			box-shadow none
			padding-top 0
	div.arrow-h
		display none
	div.arrow-v
		display inline

@media (min-width: 768px) and (max-width: 979px)
	.navbar
		margin-bottom -6px
		.navbar-inner
			padding-top 0
			box-shadow none
			padding 0 40px
	div.arrow-h
		margin-top -140px
	div.arrow-v
		display none

@media (min-width: 1200px)
	div.arrow-h
		margin-top -190px
	div.arrow-v
		display none

.navbar-fixed-top
	left 0
	margin-bottom 0
	position fixed
	right 0
	z-index 1030
