

body
	background-image url("../img/pw_maze_black.png")
	background-position center


	& > .gradient
		padding 0
		position absolute
		display table
		top 0px 
		left 0px
		height 100%
		width 100%
		background url("data:image/svg+xml;base64,")
		background -moz-linear-gradient(top,  rgba(0,0,0,0) 0%, rgba(0,0,0,0.65) 100%)
		background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0)), color-stop(100%,rgba(0,0,0,0.65)))
		background -webkit-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)
		background -o-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)
		background -ms-linear-gradient(top,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)
		background: linear-gradient(to bottom,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)
	
		& > .center
			position relative
			display table-cell
			vertical-align middle

			& > .content
				text-align center
				width 200px
				margin 0 auto
				text-align left
				padding 10px
				cursor default
							
				& > i.icon
					font-size 200px
					text-shadow 0 0 400px rgba(255, 255, 255, 0.8)
				& > p
					font-family "Open Sans", "Helvetica", "Arial", sans-serif
					font-size 20px
					font-weight 800
					text-transform uppercase

				& > p, & > i
					text-align center




.icon

	font-family 'pind-symbols'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased
	

	&.pd-round:before
		content "\e006"


@font-face {
	font-family: 'pind-symbols';
	src:url('../fonts/pind-symbols.eot?93108');
	src:url('../fonts/pind-symbols.eot?93108') format('embedded-opentype'),
		url('../fonts/pind-symbols.woff?93108') format('woff'),
		url('../fonts/pind-symbols.ttf?93108') format('truetype'),
		url('../fonts/pind-symbols.svg?93108#pind-symbols') format('svg');
	font-weight: normal;
	font-style: normal;
}
