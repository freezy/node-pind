extends outer

block body
	div.navbar.navbar-static-top
		div.navbar-inner.mainmenu
			a(href='#{pathTo.root}').icon.pind
			div.container-fluid
				ul#global-nav.nav
					li.home
						a(href='#{pathTo.root}') Home
					li.hiscores
						a(href='#{pathTo.hiscores}') High Scores
					li.coin
						a(href='#{pathTo.coin}') Coin Drop
				ul.nav.pull-right
					li.settings
						a(href='#{pathTo.admin}').icon
							i.icon.settings
					li.logout
						a(href='#{pathTo.logout}').icon
							i.icon.exit

	div.container
		div.row-fluid
			block content

	footer
		a(href="https://github.com/freezy/node-pind", target="_blank")
			i.icon.github-alt
			span <b>Fork me</b> on GitHub