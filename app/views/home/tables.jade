extends ../layouts/inner

block content
	- contentFor('javascripts', javascriptIncludeTag('data', 'tables'))
	div.span10.offset1.content(ng-app)
		section(ng-controller='TablesCtrl')
			.page-header
				h1 Tables

			.inner
				ul.thumbnails.tables
					li.span4(ng-repeat='table in tables', tb-768-980='span6')
						.thumbnail
							img(src='{{table.url_backglass_medium}}')
							hr
							.thumbnail-content

								h3 {{table.name}}
								p {{table.manufacturer}} - {{table.year}}
		.clear-fix


block inlineScripts
	script
		$(document).ready(function() {
			menu('tables');
		});
