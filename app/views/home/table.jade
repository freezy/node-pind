extends ../layouts/inner

block content
	- contentFor('javascripts', javascriptIncludeTag('table'))

	.container.content.span10.offset1
		div(ng-controller="TableCtrl", data-id="#{id}")
			.row.ng-cloak
				.span3
					.row-topleft
						img.detached(ng-src="{{table.url_backglass_medium}}")
						small Backglass

						img.detached(ng-src="{{table.url_portrait_medium}}")
						small Playfield

				.span4
					.page-header
						h1 {{table.name}}
						h3.pull-top {{table.manufacturer}}, {{table.year}}

					h5 Statistics
					.row
						.stats.span2
							big {{ table.audits.gamesPlayed|groupdigit }}
							small Games played
						.stats.span2
							big {{ table.audits.gamesStarted | groupdigit }}
							small Games started

					.row
						.stats.span2
							big {{ table.audits.ballsPlayed | groupdigit }}
							small Balls played
						.stats.span2
							big {{ table.audits.extraBalls | groupdigit }}
							small Extra balls
					.stats
						big {{ table.audits.playTime | duration }}
						small Play time
					.stats
						big {{ table.audits.runningTime | duration }}
						small Running time
					p &nbsp;

					h6 Score Histogram
					.graph.graph-score-histogram

					h6 Play Time Histogram
					.graph.graph-playtime-histogram

					h5 High Scores
					p Some scores here

					h5 Game Information
					p Some game data here.
				.span3
					.row-topright
						i.icon.ipdb.big

						.row
							.stats.span1
								big.bigger 13
								small.top Rank

							.stats.span1
								big.bigger 8.1
								small.top Rating

						p &nbsp;
						img(ng-src="{{table.url_logo}}")
						p &nbsp;
						img(ng-src="{{table.url_flyer_front_medium}}")
						p &nbsp;
						img(ng-src="{{table.url_flyer_back_medium}}")

	.clearfix


block inlineScripts
	script
		$(document).ready(function() {
			menu('tables');
		});
