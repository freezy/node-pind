extends ../layouts/inner

block content
	- contentFor('javascripts', javascriptIncludeTag('admin'))
	div.span10.offset1.content
		section.admin
			.page-header
				h1 Administration

			h2 Tables
			div.tables(style='display:none')
				ul.nav.nav-pills.pull-right
					li.active
						a ROM
					li
						a IPDB
					li
						a Media
				table.table#tables
					thead
						tr
							th Filename
							th
							th ROM?
					tbody
			div.tables-placeholder(style='display:none')
				p No tables in database.
				button.btn.fat
					i.icon.refresh
					span Load from HyperPin

			.clearfix

		.row-fluid.footer
			h2 Available Actions:
			.row-fluid
				.span4#hpsync
					h3 Resync with HyperPin
					p Read HyperPin's XML, analyze table files and update the local database.
					button.btn.fat.small
						i.icon.refresh
						span Resync
				.span4#ipdbsync
					h3 Match with IPDB.org
					p Match re-creations with IPDB and fetch additional data.
					button.btn.fat.small
						i.icon.refresh
						span Match
				.span4#dlrom
					h3 Retrieve game ROMs
					p Try to retrieve needed ROMs from IPDB.org or vpforums.org.
					button.btn.fat.small
						i.icon.refresh
						span Download
			.row-fluid
				.span4#dlmedia
					h3 Find Missing Media
					p Check vpforums.org for available media packs.
					button.btn.fat.small
						i.icon.refresh
						span Find
				.span4#fetchhs
					h3 Update High Scores
					p Read Highscores from tables and update stats.
					button.btn.fat.small
						i.icon.refresh
						span Update
				.span4

block inlineScripts
	script
		$(document).ready(function() {
			menu('btn-settings');
		});