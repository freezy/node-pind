extends layout

block inner-content
	- contentFor('javascripts', '<script type="text/javascript" src="/socket.io/socket.io.js"></script>')
	- contentFor('javascripts', javascriptIncludeTag('vendor/jquery/jquery.waitforimages-1.4.2.min'))
	- contentFor('javascripts', javascriptIncludeTag('admin_transfers'))

	div.data.vpf.transfers

		.pagination.pagination-small.pull-right
			ul(data-page="1")
				li.first.disabled
					a
						i.icon.arrow-left
				li.p1.current
					a 1
				li.last
					a
						i.icon.arrow-right

		select.numrows.input-mini.pull-right
			option(selected="selected") 10
			option 20
			option 50
			option 100
		.input-prepend.input-pill
			span.add-on
				i.icon.search
			input.search.input-medium(type='text', placeholder='keywords')
		ul.nav.nav-pills.pull-left.filter
			li
				.icon
					i.icon.filter(title="Filter results by missing")
			li(data-filter="completed", selected="selected")
				a(href="#") Completed
			li(data-filter="table")
				a(href="#") Table
			li(data-filter="rom")
				a(href="#") ROM
			li(data-filter="media")
				a(href="#") Media
		.clearfix
		.wrapper(style='display:none')
			table.table#transfers
				thead
					tr
						th
						th Name
						th(style='width:100px') Added
						th(style='width:70px') Status
				tbody
		div.noresult(style='display:none')
			p No results found.
			button.btn.fat.small Clear Filters
		div.empty(style='display:none')
			p There are currently no downloads in the queue. New downloads will appear automatically.

	.clearfix

block inlineScripts
	script
		$(document).ready(function() {
			menu('settings');
			submenu('transfers');
		});