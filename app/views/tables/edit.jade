ul.breadcrumb
      li
        a(href='/') Home
        span.divider /
      li
        != linkTo('tables', pathTo.tables())
        span.divider /
      li.active
        a(href='#') Edit table

.page-header
  h1 Edit table

- var form = formFor(table, {action: pathTo.table(table), method: 'PUT', id: "table_form", class: 'form-horizontal'});

!= form.begin()
include _form
.form-actions
  != form.submit('<i class="icon-ok icon-white"></i> Update table', {class: 'btn btn-primary'})
  span= ' or '
  != linkTo('Cancel', pathTo.table(table), {class: 'btn'})
!= form.end()
