@import('lib')
@import('nib')
@import('values')


// :generic elements 
// ============================================================================

// link with a fixed-width label
a.tt
	font-family font-fixed
	&:hover
		text-decoration none
		color black
a
	color color-darker
a:hover
	color black

input[disabled]
	cursor default
	
button, select, textarea
	font-family font-sans

hr 
	border 3px solid color-btn-light
	margin 0


// :form elements
// ============================================================================

// text boxes
input[type='text'], input[type='password']
	height initial
	font-family font-sans
	font-weight 400
	font-size 14px
	text-shadow 1px 1px 0 white
	color color-medium
	background #fff
	border 1px solid #fff
	border-radius corner-size
	box-shadow inset 0 1px 3px rgba(0,0,0,0.50)
	transition all animation-fast ease
	&:hover 
		background color-bg-focus 
		color color-darker
	&:focus
		background color-bg-focus 
		color color-darker
		box-shadow inset 0 1px 2px rgba(0,0,0,0.25)
	
	&[disabled]
		background color-lighter
		box-shadow none
		border 1px solid color-light
		&:hover 
			background color-lighter
			color color-medium

	&.input-micro
		width 35px

	&.input
		padding 10px 15px 8px
	&.input-pill
		padding 5px 10px 3px


// submit button
button[type="submit"], .btn.submit

		transition all animation-fast ease !important
		
		&.right
			float right

		padding 11px 25px
		font-family font-serif
		font-weight 700
		font-size 18px
		color #fff
		text-shadow 0px 1px 0 rgba(0,0,0,0.25)
		background color-btn-light
		border 1px solid color-btn-border
		border-radius corner-size
		cursor pointer
		box-shadow inset 0 0 2px rgba(256,256,256,0.75)

		&:hover
			background color-btn-dark
			border 1px solid rgba(256,256,256,0.75)
			box-shadow inset 0 1px 3px rgba(0,0,0,0.5)
			color #fff
		
		&:focus
			position relative
			bottom -1px
			background color-btn-light
			box-shadow inset 0 1px 6px rgba(256,256,256,0.75)

		&[disabled="disabled"]
			cursor default

			&:hover
				background color-btn-light
				border 1px solid color-btn-border
				box-shadow inset 0 0 2px rgba(256,256,256,0.75)
				color #fff
		span
			margin-left 15px

		&.small
			font-size 15px
			padding 5px 10px
			span
				margin-left 7px	

// input box prepend formatting
.input-prepend
	.add-on
		height 18px
		margin-top 1px
		padding 2px 5px 6px 7px

		&:first-child
			border-radius-topleft corner-size
			border-radius-bottomleft corner-size
			background-color rgba(0,0,0,0.07)
			text-shadow 0px 1px 0 rgba(255,255,255,0.8)
			border solid 1px rgba(0,0,0,0.15)

		& + input[type='text']
			border-radius-topleft 0
			border-radius-bottomleft 0

// links
.link-big
	display block
	margin-right 20px
	cursor pointer
	background none
	font-family font-serif
	font-weight 400
	font-size 18px
	color color-darker
	text-shadow 0px 1px 0 rgba(256,256,256,0.5)
	text-align left
	transition all animation-fast ease
	border none
	box-shadow none

	&:hover
		color color-btn-dark
		text-decoration none
		background-color rgba(0,0,0,0)
		background-position inherit
		border none
		transition inherit
		box-shadow none
		text-shadow inherit

	&:focus
		position relative
		bottom -1px

.link-small
	display block
	font-weight 400
	font-size 11px
	color color-dark
	cursor pointer
	text-shadow 0px 1px 0 rgba(256,256,256,0.5)
	transition all animation-fast ease

	&:hover
		color color-btn-dark
		text-decoration none
	&:focus
		position relative
		bottom -1px

// 3d buttons
.fuzzy3d 
	z-index 0
	color #b3aca5
	font-family font-serif
	line-height 1.7
	float left
	position relative
	margin-right 30px

	&:before
		content " "
		display block
		width 170px
		padding 0 2px
		height 45px
		margin-top 2px
		background rgba(0, 0, 0, 0.8)
		border-radius 22px
		box-shadow 0 1px 2px rgba(255, 255, 255, 0.2)
		z-index -100
		position absolute
		top -2px
		left -2px

	button
		font-family font-serif
		display block
		cursor pointer
		float left
		height 40px
		width 170px
		padding 0 15px
		color white
		font-weight bold
		text-shadow 0px 1px 2px rgba(0, 0, 0, 0.55)
		font-size 16px
		border-radius 20px
		background-image linear-gradient(top, color-btn-light1 0%, color-btn-light2 15%, color-btn-light3 100%)
		box-shadow 0 1px 0 rgba(255, 255, 255, 0.35), inset 0 0 10px rgba(255, 255, 255, 0.35)
		border 0
		position relative
		top -2px
		margin-bottom 20px

		&:before
			content " "
			display block
			background color-btn-light4
			background-image linear-gradient(top, rgba(0, 0, 0, 0) 90%, rgba(0, 0, 0, 0.2) 100%)
			border-radius 20px
			position absolute
			z-index -50
			top 0px
			left 0px
			width 170px
			height 45px

		&:hover
			top -4px
			&:before
				height 47px

		&:active
			top 0px
			&:before
				height 43px

		&[disabled]
			color #eee
			background-image linear-gradient(top, #aeaeae 0%, #c9c9c9 15%, #9e9e9e 100%)
			&:hover
				cursor default
				top -2px
				&:before
					height 45px

			&:active
				top -2px
				&:before
					height 45px
			&:before
				background #888888

@media (max-width: 480px)
	.fuzzy3d + p
		clear left


// :progress bar
// ============================================================================

.progress
	background-color color-light
	background-image none
.progress-striped .bar
	background-color color-btn-light

tr.completed .progress-striped .bar
	background-color rgba(0,0,0,0.15)
	transition none

tr.started .progress.progress-striped
	background-color rgba(0,0,0,0.15)

tr.queued .progress.progress-striped
	background-color rgba(0,0,0,0.04)

td > .progress
	margin-bottom 0


// :table element styles
// ============================================================================	

td
	a
		&:hover
			text-decoration none
	b
		background-color rgba(224, 157, 85, 0.3)
		font-weight normal
		text-shadow 1px 1px 0 rgba(255,255,255,0.8)

	input[type='text']
		padding 0 10px
		margin 0

	&.rom
		font-family font-fixed	
		&.na, &.unknown
			color color-medium
		&.missing
			color color-red

	&.size
		text-align right			

	&.nowrap
		white-space nowrap
		ul
			white-space nowrap

	li.link
		cursor pointer
		&.disabled
			cursor default

	i.icon
		&.info
			margin-left 3px
			margin-right 0

		&.link
			margin-left 10px

		&.clickable
			cursor pointer
			&:hover
				color black
			&.remove
				margin-right 5px
			&.ok
				margin-left 5px


@media (max-width: 480px)
	td.nowrap
		white-space normal

tr
	&.failed
		background-color rgba(255,20,0,0.075)

// drag and drop
td > .dragHandle
	&:hover
		cursor s-resize
	i
		color rgba(0,0,0,0.3)
		&:hover
			color rgba(0,0,0,0.7)

tr.dragging
	background-color rgba(0,0,0,0.07)

	td > .dragHandle i
		color rgba(0,0,0,0.7)

tr.newblock td
	border-top-width 5px


// :misc elements
// ============================================================================	

.transfer-status strong.status
	text-transform uppercase
	color rgba(0,0,0,0.75)
	font-weight normal
	font-size 11px

.hidden
	display none


select.numrows
	color black
	margin 0px 0px 10px 10px
	height 26px
	font-size 11.9px
	border-radius corner-size
	background-color #e3e3e3
	text-shadow 0px 1px 0 rgba(255,255,255,0.8)