			float right
			max-width 70px
			text-overflow ellipsis
			overflow hidden

	a.colorbox:hover
		text-decoration none


	.thumb
		width vpf-thumbsize
		height vpf-thumbsize
		margin-right 15px
		background-position center
		background-size cover
		opacity 0
		transition all animation-slow ease

		border-radius-topleft 3px
		border-radius-bottomleft 3px

		&.loaded
			opacity 1

			& + .thumb-placeholder
				transition all animation-slow ease
				background none
				&:before
					transition all animation-slow ease
					content none


	.thumb-placeholder
		width vpf-thumbsize - vpf-padding - vpf-padding
		height vpf-thumbsize - vpf-padding - vpf-padding
		margin-top - vpf-thumbsize
		background-color rgba(0,0,0,0.2)
		padding vpf-padding
		border-right 4px solid #e09d55
		border-radius-topleft 3px
		border-radius-bottomleft 3px

		font-size vpf-thumbsize - vpf-padding - vpf-padding
		font-family 'pind-symbols'
		speak none
		line-height 1
		-webkit-font-smoothing antialiased

		&:before 
			content "\e006"
			color rgba(255,255,255,0.5)
