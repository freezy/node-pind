	.fuzzy3d + p
		clear left


// :admin
// ============================================================================

.nodata, .noresult
	background-color white
	border 2px dashed black
	border-radius corner-size
	padding 30px
	text-align center

	.progress
		margin-top 20px
		margin-bottom 0

.span3.disabled, .span4.disabled
	color color-medium
	text-shadow 1px 1px 0 rgba(255,255,255,0.4)

table
	td.rom
		font-family font-fixed	
		&.na, &.unknown
			color color-medium
		&.missing
			color color-red
	td b
		background-color rgba(224, 157, 85, 0.3)
		font-weight normal
		text-shadow 1px 1px 0 rgba(255,255,255,0.8)

.nodata p + .icon
	font-size 42px
	color rgba(0,0,0,0.7)

// :home
// ============================================================================
section.home




// :tables
// ============================================================================

.content.tables
	.media
		background-color color-light
