	border-radius corner-size
	padding 30px
	text-align center

.span3.disabled, .span4.disabled
	color color-medium
	text-shadow 1px 1px 0 rgba(255,255,255,0.4)

table#tables td.rom
	font-family font-fixed	
	&.na, &.unknown
		color color-medium
